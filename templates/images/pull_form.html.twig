{% extends 'base.html.twig' %}

{% block title %}Create new image{% endblock %}

{% block body %}
    <section class="bg-coolGray-50 py-4">
        <div class="container px-4 mx-auto">
            <div class="flex flex-wrap items-center justify-between -m-2 mb-4">
                <div class="w-full md:w-1/2 p-2">
                    <p class="font-semibold text-xl text-coolGray-800">Create new Image</p>
                </div>
                <div class="w-full md:w-1/2 p-2">
                    <div class="relative md:max-w-max md:ml-auto">
                    </div>
                </div>
            </div>
            <div class="antialiased bg-body text-body font-body px-8">
                {{ form_start(createImageForm) }}
                <div class="mb-6">
                    {{ form_row(createImageForm.fromImage, {'attr': {'class': 'w-full py-3 px-4 text-coolGray-500 leading-tight placeholder-coolGray-500 focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-opacity-50 border border-coolGray-200 rounded-lg shadow-xs'}}) }}
                </div>
                <div class="mb-6">
                    {{ form_row(createImageForm.fromSrc, {'attr': {'class': 'w-full py-3 px-4 text-coolGray-500 leading-tight placeholder-coolGray-500 focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-opacity-50 border border-coolGray-200 rounded-lg shadow-xs'}}) }}
                </div>
                <div class="mb-6">
                    {{ form_row(createImageForm.repo, {'attr': {'class': 'w-full py-3 px-4 text-coolGray-500 leading-tight placeholder-coolGray-500 focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-opacity-50 border border-coolGray-200 rounded-lg shadow-xs'}}) }}
                </div>
                <div class="mb-6">
                    {{ form_row(createImageForm.tag, {'attr': {'class': 'w-full py-3 px-4 text-coolGray-500 leading-tight placeholder-coolGray-500 focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-opacity-50 border border-coolGray-200 rounded-lg shadow-xs'}}) }}
                </div>
                <div class="mb-6">
                    {{ form_row(createImageForm.message, {'attr': {'class': 'w-full py-3 px-4 text-coolGray-500 leading-tight placeholder-coolGray-500 focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-opacity-50 border border-coolGray-200 rounded-lg shadow-xs'}}) }}
                </div>
                <div class="mb-6">
                    {{ form_row(createImageForm.changes, {'attr': {'class': 'w-full py-3 px-4 text-coolGray-500 leading-tight placeholder-coolGray-500 focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-opacity-50 border border-coolGray-200 rounded-lg shadow-xs'}}) }}
                </div>
                <div class="mb-6">
                    {{ form_row(createImageForm.platform, {'attr': {'class': 'w-full py-3 px-4 text-coolGray-500 leading-tight placeholder-coolGray-500 focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-opacity-50 border border-coolGray-200 rounded-lg shadow-xs'}}) }}
                </div>
                <button class="inline-block py-3 px-7 w-full md:w-auto text-lg leading-7 text-green-50 bg-green-500 hover:bg-green-600 font-medium text-center focus:ring-2 focus:ring-green-500 focus:ring-opacity-50 border border-transparent rounded-md shadow-sm"
                        type="submit">Create Image
                </button>
                {{ form_end(createImageForm) }}
            </div>
        </div>
    </section>
{% endblock %}
